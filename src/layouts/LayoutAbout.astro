---
import { Image } from 'astro:assets';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/sections/Footer.astro';
import Header from '../components/sections/Header.astro';
import { work } from '../data/work';
import WorkExperience from '@/components/sections/WorkExperience.astro';

import Studies from '@/components/sections/Studies.astro';
import { studies } from '../data/studies'

import GlowLineSeparator from '@/components/ui/separator/GlowLineSeparator.astro';
import ArrowSeparator from '../components/ui/separator/ArrowSeparator.astro'

type Props = {
  title: string;
  description: string;
  showHeader?: boolean;
  heroImage?: ImageMetadata;
};

const { title, description, showHeader = true, heroImage } = Astro.props as Props;

---

<html lang="en" data-theme="dark" class="dark">
	<head>
		<BaseHead title={title} description={description} image={heroImage} />
		<meta property="og:type" content="article" />

		<style>
				/* Align blog layout with site container to avoid right overflow and tight column */
				main {
					width: 1280px;
					max-width: calc(100% - 2em);
					margin: auto;
					background: var(--color-bg-primary);
				}
			.hero-image {
				width: 100%;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 12px;
				box-shadow: var(--box-shadow);
			}
				.prose {
					width: 100%;
					max-width: 870px; /* widen column */
					margin: auto;
					padding: 0.05em;
					color: var(--color-text-secondary);
				}
            .title {
				margin-bottom: 1em;
				padding: 1em 0;
				text-align: center;
				line-height: 1;
			}
			.title h1 {
                margin: 0 0 0.5em 0;
                color: var(--color-text-primary);
			}
			.date {
                margin-bottom: 0.5em;
                color: var(--color-text-muted);
			}
			.last-updated-on {
				font-style: italic;
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
			{showHeader && (
				<div class="hero-image">
				{heroImage && <Image width={1020} height={510} src={heroImage} alt="" />}
				</div>
			)}
			<div class="prose">
				<p style="text-align:center; font-weight:bold; margin-top:1rem;">
				</p>
				<slot />
			</div>
			<section class="w-full py-6 md:py-10">
				<div class="mx-auto max-w-5xl px-4">
				<div class="flex flex-col md:flex-row items-center gap-6 rounded-2xl p-6 border-2 border-[var(--accent)] bg-[var(--color-bg-primary)]">

				<!-- Imagen -->
				<img 
					src="/portfolio_astro_page/img1.png" 
					alt="Nahuel Aparicio Del Blanco" 
					class="w-40 h-40 md:w-40 md:h-40 rounded-full object-cover shadow-md"
				/>

				<!-- Texto -->
				<div class="text-center">
					<h1 class="text-1xl md:text-5xl font-extrabold tracking-tight text-foreground">
					<span class="bg-gradient-to-r from-[var(--accent)] to-[var(--accent-dark)] bg-clip-text text-transparent">
						Nahuel Aparicio Del Blanco
					</span>
					</h1>
					<p class="mt-2 text-lg md:text-xl text-[color:var(--color-text-secondary)]">
					Gameplay Programmer & Game Developer â€“ Barcelona, Spain.
					</p>
				</div>

				</div>
			</div>
		</section>
			<p>
				Since I was a kid, I have been fascinated by how games create worlds that feel alive. 
				That curiosity grew into a passion for <b>game development</b> and <b>gameplay programming</b>, 
				where I now focus on building <b>efficient, modular, and fun-to-play systems</b>.
			</p>
			<p>
				I see myself as a <b>problem solver</b>, always striving to write maintainable code and open to constructive 
  				feedback that helps me improve both personally and professionally.
			</p>
			<p>
				I started programming in <b>2017</b>, focusing mostly on <b>Unity (C#)</b>, while also gaining experience 
				with <b>C++</b> and engines/frameworks such as Unreal, OpenGL, SFML and Phaser.  
			</p>
			<p>
				My ultimate goal is to craft <b>game systems</b> that bring ideas and designs to life, 
				combining technical precision with the magic of play.
			</p>

			<ArrowSeparator/>
			</article>
		</main>
		<GlowLineSeparator/>
		<Studies items={studies} title="Studies"/>
		<GlowLineSeparator/>
		<WorkExperience items={work} title="Work Experience" />
		<Footer />
	</body>
</html>
