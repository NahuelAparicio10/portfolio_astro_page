---
import HeaderLink from './HeaderLink.astro';

const currentPath = Astro.url.pathname; // Detecta la ruta actual
---

<header class="bg-background text-foreground border-b sw-header mb-0">
  <nav class="mx-auto max-w-6xl px-4 py-2 flex items-center justify-between">
    <!-- Logo -->
    <div class="flex items-center gap-3">
      <a class="no-underline hover:opacity-90 flex items-center gap-2" href="/" aria-label="Home">
        <img src="/NaguCode_Logo.jpg?v=1" alt="" aria-hidden="true" width="45" height="45" />
      </a>

      <!-- Links desktop -->
      <div class="internal-links hidden md:flex items-center gap-2 ml-1">
        <HeaderLink 
          href="/" 
          class={`px-3 py-3 font-bold no-underline rounded-md transition-colors
            ${currentPath === "/" 
              ? "text-[var(--accent)] bg-[var(--accent)]/10" 
              : "text-[color:var(--color-text-secondary)] hover:text-[var(--accent)] hover:bg-[var(--accent)]/10"}`}
        >Home</HeaderLink>

        <HeaderLink 
          href="/about" 
          class={`px-3 py-3 font-bold no-underline rounded-md transition-colors
            ${currentPath === "/about" 
              ? "text-[var(--accent)] bg-[var(--accent)]/10" 
              : "text-[color:var(--color-text-secondary)] hover:text-[var(--accent)] hover:bg-[var(--accent)]/10"}`}
        >About</HeaderLink>

        <HeaderLink 
          href="/Skills" 
          class={`px-3 py-3 font-bold no-underline rounded-md transition-colors
            ${currentPath === "/Skills" 
              ? "text-[var(--accent)] bg-[var(--accent)]/10" 
              : "text-[color:var(--color-text-secondary)] hover:text-[var(--accent)] hover:bg-[var(--accent)]/10"}`}
        >Skills</HeaderLink>

        <HeaderLink 
          href="/blog" 
          class={`px-3 py-3 font-bold no-underline rounded-md transition-colors
            ${currentPath === "/blog" 
              ? "text-[var(--accent)] bg-[var(--accent)]/10" 
              : "text-[color:var(--color-text-secondary)] hover:text-[var(--accent)] hover:bg-[var(--accent)]/10"}`}
        >Game Projects</HeaderLink>

        <HeaderLink 
          href="/portfolio" 
          class={`px-3 py-3 font-bold no-underline rounded-md transition-colors
            ${currentPath === "/portfolio" 
              ? "text-[var(--accent)] bg-[var(--accent)]/10" 
              : "text-[color:var(--color-text-secondary)] hover:text-[var(--accent)] hover:bg-[var(--accent)]/10"}`}
        >Projects</HeaderLink>

        <a 
          href="#contact" 
          class={`px-3 py-3 font-bold no-underline rounded-md transition-colors
            ${currentPath === "/contact" 
              ? "text-[var(--accent)] bg-[var(--accent)]/10" 
              : "text-[color:var(--color-text-secondary)] hover:text-[var(--accent)] hover:bg-[var(--accent)]/10"}`}
        >CV & Contact</a>
      </div>
    </div>

    <!-- Social + Hamburguesa -->
    <div class="flex items-center gap-3">
      <div class="social-links hidden md:flex items-center gap-3">
        <a href="https://x.com/naguuu10" target="_blank" class="group text-[color:var(--color-text-secondary)] hover:text-[var(--accent)] transition-colors">
          <svg viewBox="0 0 24 24" width="24" height="24" aria-hidden="true"><path fill="currentColor" d="M18.146 3H21l-7.5 8.574L22.5 21h-6.297l-4.93-5.597L5.5 21H3l8.106-9.266L3 3h6.453l4.466 5.07L18.146 3Zm-1.103 16.2h1.705L7.05 4.64H5.272l11.771 14.56Z"/></svg>
        </a>
        <a href="https://github.com/NahuelAparicio10" target="_blank" class="group text-[color:var(--color-text-secondary)] hover:text-[var(--accent)] transition-colors">
          <svg viewBox="0 0 16 16" aria-hidden="true" width="24" height="24"><path fill="currentColor" d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"></path></svg>
        </a>
      </div>

      <!-- Botón hamburguesa -->
      <button
        data-menu-btn
        class="md:hidden inline-flex items-center justify-center rounded-md p-2 border border-[color:var(--color-text-muted)]/30"
        aria-controls="mobile-menu"
        aria-expanded="false"
        aria-label="Open menu"
      >
        <svg class="h-6 w-6" viewBox="0 0 24 24" aria-hidden="true">
          <path fill="currentColor" d="M3 6h18v2H3zM3 11h18v2H3zM3 16h18v2H3z"/>
        </svg>
      </button>
    </div>
  </nav>

  <!-- Menu móvil -->
  <div id="mobile-menu" class="md:hidden hidden border-t bg-background">
    <div class="mx-auto max-w-6xl px-4 py-3 flex flex-col gap-2">
      <HeaderLink href="/" class={`px-2 py-3 font-bold no-underline rounded-md ${currentPath === "/" ? "text-[var(--accent)] bg-[var(--accent)]/10" : "hover:text-[var(--accent)] hover:bg-[var(--accent)]/10"}`}>Home</HeaderLink>
      <HeaderLink href="/about" class={`px-2 py-3 font-bold no-underline rounded-md ${currentPath === "/about" ? "text-[var(--accent)] bg-[var(--accent)]/10" : "hover:text-[var(--accent)] hover:bg-[var(--accent)]/10"}`}>About</HeaderLink>
      <HeaderLink href="/Skills" class={`px-2 py-3 font-bold no-underline rounded-md ${currentPath === "/Skills" ? "text-[var(--accent)] bg-[var(--accent)]/10" : "hover:text-[var(--accent)] hover:bg-[var(--accent)]/10"}`}>Skills</HeaderLink>
      <HeaderLink href="/blog" class={`px-2 py-3 font-bold no-underline rounded-md ${currentPath === "/blog" ? "text-[var(--accent)] bg-[var(--accent)]/10" : "hover:text-[var(--accent)] hover:bg-[var(--accent)]/10"}`}>Game Projects</HeaderLink>
      <HeaderLink href="/portfolio" class={`px-2 py-3 font-bold no-underline rounded-md ${currentPath === "/portfolio" ? "text-[var(--accent)] bg-[var(--accent)]/10" : "hover:text-[var(--accent)] hover:bg-[var(--accent)]/10"}`}>Projects</HeaderLink>
      <a href="#contact" class={`px-2 py-3 font-bold no-underline rounded-md ${currentPath === "/contact" ? "text-[var(--accent)] bg-[var(--accent)]/10" : "hover:text-[var(--accent)] hover:bg-[var(--accent)]/10"}`}>CV & Contact</a>
    </div>
  </div>
</header>

<script is:inline>
  const btn = document.querySelector('[data-menu-btn]');
  const panel = document.getElementById('mobile-menu');

  function toggleMenu() {
    if (!panel || !btn) return;
    const isOpen = !panel.classList.contains('hidden');
    panel.classList.toggle('hidden');
    btn.setAttribute('aria-expanded', String(!isOpen));
    document.documentElement.classList.toggle('overflow-hidden', !isOpen);
  }

  btn?.addEventListener('click', toggleMenu);

  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && !panel?.classList.contains('hidden')) toggleMenu();
  });
  document.addEventListener('click', (e) => {
    if (!panel || !btn) return;
    if (!panel.contains(e.target) && !btn.contains(e.target) && !panel.classList.contains('hidden')) toggleMenu();
  });
</script>
