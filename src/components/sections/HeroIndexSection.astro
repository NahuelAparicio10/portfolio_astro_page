---
import Button from "../ui/button/Button.astro";

interface Cta { text: string; href: string; variant?: "primary" | "secondary"; }
interface Props {
  title: string;          
  highlight?: string;     
  role: string;           
  subtitle?: string;
  ctas?: Cta[];
}
const { title, highlight, role, subtitle, ctas = [] } = Astro.props as Props;
---

<section class="relative w-screen h-screen overflow-hidden m-0">
  <!-- VIDEO -->
  <video
    autoplay
    muted
    loop
    playsinline
    class="absolute inset-0 w-full h-full object-cover z-0">
    <source src="/videos/fondo.mp4" type="video/mp4" />
  </video>

  <!-- Overlay oscuro -->
  <div class="absolute inset-0 bg-black/80 z-10"></div>

  <!-- CONTENIDO -->
  <div class="relative z-20 flex flex-col items-center justify-center h-full px-6 text-center">
    
    <!-- Nombre -->
    <h1 class="text-5xl md:text-7xl font-extrabold tracking-tight text-foreground mb-4 whitespace-nowrap">
      <span>{title} </span>
      {highlight && (
        <span class="bg-gradient-to-r from-[var(--accent)] to-[var(--accent-dark)] bg-clip-text text-transparent">
          {highlight}
        </span>
      )}
    </h1>

    <!-- Rol -->
    <h3 class="text-2xl md:text-3xl font-semibold text-foreground mb-6">
      {role}
    </h3>

    <!-- SubtÃ­tulo -->
    {subtitle && (
      <p class="max-w-2xl text-base md:text-lg text-[color:var(--color-text-secondary)] mb-8">
        {subtitle}
      </p>
    )}

    <!-- CTA -->
    {ctas.length > 0 && (
      <div class="flex flex-wrap justify-center gap-4 mt-7">
        {ctas.map((cta) => (
          <a
            href={cta.href}
            class={`
              px-6 py-3 rounded-lg font-semibold transition-all 
              ${ cta.variant === "primary"
                ? "bg-gradient-to-r from-[var(--accent)] to-[var(--accent-dark)] text-white shadow-lg hover:scale-105 hover:shadow-xl "
                : "border border-[var(--accent)] text-[var(--accent)] hover:bg-[var(--accent)] hover:text-white "}
            `}
          >
            {cta.text}
          </a>
        ))}
      </div>
    )}
  </div>
</section>
