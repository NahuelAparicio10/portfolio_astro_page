---
import type { CollectionEntry } from 'astro:content';
import PostCard from '../../ui/card/ES_PostCard.astro';

interface Props 
{
  posts: CollectionEntry<'es'>[];
  title?: string;
}

const { posts = [], title = 'JUEGOS' } = Astro.props as Props;
---

<section class="space-y-6">
  <h2 class="text-3xl font-bold">{title}</h2>
  <br/>
  <div class="blog-grid">
    {posts.map((post) => (
      <PostCard post={post} />
    ))}
  </div>
</section>


