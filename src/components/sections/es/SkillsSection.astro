---
import Carousel from '../../ui/carousel/Carousel.astro';
import { loadLogosFrom } from '../../../data/logos';
import GlowLineSeparator from '@/components/ui/separator/GlowLineSeparator.astro';
interface SkillItem {
  icon: string; 
  title: string;
  description: string;
}

interface Props {
  title?: string;
  skills: SkillItem[];
}

const { title, skills } = Astro.props as Props;
---

<section class="w-full ">
  <div class="mx-auto max-w-6xl px-4">
  <GlowLineSeparator class="mb-8 mt-8" />

  <h3 class="text-3xl md:text-4xl font-semibold text-center mb-6 text-foreground ">LENGUAJES DE PROGRAMACIÓN</h3>
  
  <Carousel tools={loadLogosFrom('programming')} />
  <GlowLineSeparator class="mb-8 mt-8" />
    
  <h3 class="text-3xl md:text-4xl font-semibold text-center mb-6 text-foreground ">MOTORES Y FRAMEWORKS</h3>
  
  <Carousel tools={loadLogosFrom('engines')} />
  <GlowLineSeparator class="mb-8 mt-8" />

  <h3 class="text-3xl md:text-4xl font-semibold text-center mb-6 text-foreground ">IDEs Y EDITORES DE CÓDIGO</h3>  
  
  <Carousel tools={loadLogosFrom('ides')} />
  <GlowLineSeparator class="mb-8 mt-8" />

  <h3 class="text-3xl md:text-4xl font-semibold text-center mb-6 text-foreground ">CONTROL DE VERSIONES Y GESTIÓN DE PROYECTOS</h3>

  <Carousel tools={loadLogosFrom('source_control')} />
  <GlowLineSeparator class="mb-8 mt-8" />

  <h3 class="text-3xl md:text-4xl font-semibold text-center mb-6 text-foreground ">DISEÑO, MEDIA Y HERRAMIENTAS 3D</h3>

  <Carousel tools={loadLogosFrom('design')} />
  <GlowLineSeparator class="mb-8 mt-8" />

  <h3 class="text-3xl md:text-4xl font-semibold text-center mb-6 text-foreground ">SOFT SKILLS</h3>
    <div class="mt-7 mb-15 flex flex-wrap justify-center gap-3">
      <span class="inline-flex items-center rounded-full px-5 py-2 text-sm md:text-base font-semibold"
            style="background: rgba(var(--accent-rgb),0.1); color: var(--accent); border: 2px solid rgba(var(--accent-rgb),0.4);">
        Trabajo en equipo
      </span>
      <span class="inline-flex items-center rounded-full px-5 py-2 text-sm md:text-base font-semibold"
            style="background: rgba(var(--accent-rgb),0.1); color: var(--accent); border: 2px solid rgba(var(--accent-rgb),0.4);">
        Resolución de problemas
      </span>
      <span class="inline-flex items-center rounded-full px-5 py-2 text-sm md:text-base font-semibold"
            style="background: rgba(var(--accent-rgb),0.1); color: var(--accent); border: 2px solid rgba(var(--accent-rgb),0.4);">
        Adaptabilidad
      </span>
      <span class="inline-flex items-center rounded-full px-5 py-2 text-sm md:text-base font-semibold"
            style="background: rgba(var(--accent-rgb),0.1); color: var(--accent); border: 2px solid rgba(var(--accent-rgb),0.4);">
        Comunicación
      </span>
      <span class="inline-flex items-center rounded-full px-5 py-2 text-sm md:text-base font-semibold"
            style="background: rgba(var(--accent-rgb),0.1); color: var(--accent); border: 2px solid rgba(var(--accent-rgb),0.4);">
        Pensamiento crítico
      </span>
      <span class="inline-flex items-center rounded-full px-5 py-2 text-sm md:text-base font-semibold"
            style="background: rgba(var(--accent-rgb),0.1); color: var(--accent); border: 2px solid rgba(var(--accent-rgb),0.4);">
        Creatividad
      </span>
      <span class="inline-flex items-center rounded-full px-5 py-2 text-sm md:text-base font-semibold"
            style="background: rgba(var(--accent-rgb),0.1); color: var(--accent); border: 2px solid rgba(var(--accent-rgb),0.4);">
        Atención al detalle
      </span>
      <span class="inline-flex items-center rounded-full px-5 py-2 text-sm md:text-base font-semibold"
            style="background: rgba(var(--accent-rgb),0.1); color: var(--accent); border: 2px solid rgba(var(--accent-rgb),0.4);">
        Autodidacta
      </span>
      <span class="inline-flex items-center rounded-full px-5 py-2 text-sm md:text-base font-semibold"
            style="background: rgba(var(--accent-rgb),0.1); color: var(--accent); border: 2px solid rgba(var(--accent-rgb),0.4);">
        Resiliencia
      </span>
    </div>

    <GlowLineSeparator class="mb-8 mt-8" />

    <h3 class="text-3xl md:text-4xl font-semibold text-center mb-6 text-foreground ">IDIOMAS</h3>
    <div class="mt-7 flex flex-wrap justify-center gap-3">
      <span class="inline-flex items-center rounded-full px-5 py-2 text-sm md:text-base font-semibold"
            style="background: rgba(255,0,0,0.1); color: #ff0000; border: 2px solid rgba(255,0,0,0.4);">
        Español (Nativo)
      </span>
      <span class="inline-flex items-center rounded-full px-5 py-2 text-sm md:text-base font-semibold"
            style="background: rgba(255,0,0,0.1); color: #ff0000; border: 2px solid rgba(255,0,0,0.4);">
        Catalán (Nativo)
      </span>
      <span class="inline-flex items-center rounded-full px-5 py-2 text-sm md:text-base font-semibold"
            style="background: rgba(255,0,0,0.1); color: #ff0000; border: 2px solid rgba(255,0,0,0.4);">
        Inglés (Nivel B2)
      </span>
    </div>

  </div>
</section>


