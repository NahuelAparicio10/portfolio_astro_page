---
interface Props {
  title?: string;
  subtitle?: string;
}

const { title = 'Game Projects', subtitle } = Astro.props as Props;
---

<section class="w-full py-4">
  <div class="mx-auto max-w-5xl px-3">
    <div class="grid items-center gap-4 md:grid-cols-2">
      <h1 class="text-4xl md:text-6xl font-extrabold tracking-tight text-foreground text-center">
        <span class="bg-gradient-to-r from-[var(--accent)] to-[var(--accent-dark)] bg-clip-text text-transparent">{title}</span>
              {subtitle && (
        <p class="text-base md:text-lg text-[color:var(--color-text-secondary)] ">{subtitle}</p>
      )}
      </h1>

    </div>
  </div>
  </section>


