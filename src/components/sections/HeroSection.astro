---
import Button from "../ui/button/Button.astro";

interface Cta {
  text: string;
  href: string;
  variant?: "primary" | "secondary"; // puedes ampliar si tienes m√°s estilos
}

interface Props {
  title: string;
  subtitle?: string;
  showCTA?: boolean;
  ctas?: Cta[];
}

const {
  title,
  subtitle,
  showCTA = false,
  ctas = [],
} = Astro.props as Props;
---

<section class="w-full py-6 md:py-10">
  <div class="mx-auto max-w-5xl px-4 text-center">
    <h1 class="text-4xl md:text-6xl font-extrabold tracking-tight text-foreground">
      <span class="bg-gradient-to-r from-[var(--accent)] to-[var(--accent-dark)] bg-clip-text text-transparent">
        {title}
      </span>
    </h1>

    {subtitle && (
      <p class="mt-4 text-lg md:text-xl text-[color:var(--color-text-secondary)] max-w-2xl mx-auto">
        {subtitle}
      </p>
    )}

    {showCTA && ctas.length > 0 && (
      <div class="mt-8 flex flex-col sm:flex-row items-center justify-center gap-3">
        {ctas.map((cta) => (
          <Button 
            href={cta.href} 
            variant={cta.variant ?? "primary"} 
            size="md"
          >
            {cta.text}
          </Button>
        ))}
      </div>
    )}
  </div>
</section>